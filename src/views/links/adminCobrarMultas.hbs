<div class="p-4">
    <a href="/links/admin" class="text-white"><button type="button" class="btn red accent-4"><i
                class="fas fa-arrow-left"></i></button></a>
</div>
<div class="m-3 p-2">
    <table id="example" class="display" style="width:100%">
        <thead>
            <tr>
                <th>id</th>
                <th>Nombre</th>
                <th>identificación</th>
                <th>Disponibilidad</th>
                <th>Denuncias</th>
                <th>Gestionar</th>
            </tr>
        </thead>
        <tbody>
            {{#each multas}}
            <tr>
                <td>{{id}}</td>
                <td>{{nombre}}</td>
                <td>{{identificacion}}</td>
                <td>{{disponible}}</td>
                <td>{{denuncias}}</td>
                <td>
                    <form action="/links/cobraMulta/{{id}}" class="ActionForm">
                        <button type="submit" class="btn  red darken-3"><i class="fa fa-gavel" aria-hidden="true"></i>
                        </button>
                    </form>
            </tr>
            {{else}}
            <h4>No hay pasajeros registrados</h4>
            {{/each}}

        </tbody>
    </table>
</div>
<script>
    $('.ActionForm').submit(function (e) {
        e.preventDefault();
        Swal.fire({
            title: 'Confirmación',
            text: "¿Volver a disponerlo al publico?",
            icon: 'info',
            showCancelButton: true,
            confirmButtonColor: '#1e88e5',
            cancelButtonText: 'No, Disponer',
            confirmButtonText: 'Si, Disponer',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                this.submit();
            }
        })
    });
</script>